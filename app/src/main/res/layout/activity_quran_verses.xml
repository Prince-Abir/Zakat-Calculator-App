                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="16sp">

                </TextView>

